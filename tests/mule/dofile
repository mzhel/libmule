Release:
KEYS=-fpack-struct=1
Debug:
KEYS=-ggdb -fpack-struct=1 
Verbose:
DEFINE=CONFIG_VERBOSE
Profile:
DEFINE=EXIT_TIMER
Daemon:
DEFINE=RUN_AS_DAEMON
[CLangLinker]
TARGETNAME=$TEST_NAME$
TARGETDIR=../../bin/
LIBS= cgraph cdt
Shared:
LIBS= c rt
Static:
LIBS=c rt
[Cleaner]
DIRS=./;./obj/
EXTS=*.o;*.dat

Build >> [CLangCompiler,CLangLinker]
Rebuild >> [Cleaner,CLangCompiler,CLangLinker]
Clean >> [Cleaner]

